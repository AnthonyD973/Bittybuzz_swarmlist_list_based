#!/bin/bash

# ==============================
# =    FUNCTION DEFINITIONS    =
# ==============================

conduct_experiment() {
    subdir="exp_${protocol}Protocol_${topology}Topology_${num_robots}Robots_${packet_drop_prob}MsgDropProb/exp${i}"

    # Run experiment
    case $RUN_OR_SUBMIT in

        "run")
            experiment_dir="$WD/$subdir"
            mkdir -p "$experiment_dir"
            ("$GIT_ROOT/src/experimenters/job_runner" \
            "$i" \
            "$ARGOS_IN" \
            "$FOOTBOT_CONTROLLER_LIB" \
            "$LOOP_FUNCTIONS_LIB" \
            "$experiment_dir" \
            "" \
            "" \
            "$FINAL_RES_CSV" \
            "$FOOTBOT_STATUS_LOG_DELAY" \
            "00:00:00" \
            "$STEPS_TO_STALL" \
            "$protocol" "$topology" "$num_robots" "$packet_drop_prob" \
            "$ENTRIES_SHOULD_BECOME_INACTIVE")
            ;;

        "submit")
            # Don't send more than 500 jobs at the same time.
            while [ $(qselect -u $(whoami) | wc -l) -ge 500 ]; do sleep 10; done
            echo "STARTING: ${i}-th experiment with ${topology}, ${num_robots}, ${packet_drop_prob}."

            experiment_dir="$LSCRATCH/$subdir"
            experiment_outdir="$WD/$subdir"

            # Create ouptut dir and realtime file.
            mkdir -p "$experiment_outdir"
            realtime_output_file="$experiment_outdir/realtime_output.txt"
            echo "" > "$realtime_output_file"

            # Submit experiment.
            qsub -F " \
            \"$i\" \
            \"$ARGOS_IN\" \
            \"$FOOTBOT_CONTROLLER_LIB\" \
            \"$LOOP_FUNCTIONS_LIB\" \
            \"$experiment_dir\" \
            \"$experiment_outdir\" \
            \"$realtime_output_file\" \
            \"$FINAL_RES_CSV\" \
            \"$FOOTBOT_STATUS_LOG_DELAY\" \
            \"$WALLTIME\" \
            \"$STEPS_TO_STALL\" \
            \"$protocol\" \"$topology\" \"$num_robots\" \"$packet_drop_prob\" \
            \"$ENTRIES_SHOULD_BECOME_INACTIVE\"" \
            -N "${protocol::1}${topology::1}_${num_robots}_${packet_drop_prob}" \
            -l "walltime=${WALLTIME}" \
            "$GIT_ROOT/src/experimenters/job_runner"
            ;;

        *)
            echo "Please specify either \"run\" or \"submit\" as target."
            exit 1

    esac
    sleep 1
}

##################################################

conduct_experiment_with_seed() {
    i=${1}
    protocol=${2}
    topology=${3}
    num_robots=${4}
    packet_drop_prob=${5}
    conduct_experiment
}

##################################################

conduct_experiment_set() {
    PROTOCOLS="${1}"
    TOPOLOGIES="${2}"
    PACKET_DROP_PROBS="${3}"
    NUMS_ROBOTS="${4}"
    for protocol in $PROTOCOLS
    do
        for topology in $TOPOLOGIES
        do
            for packet_drop_prob in $PACKET_DROP_PROBS
            do
                for num_robots in $NUMS_ROBOTS
                do
                    i=1
                    while [ $i -le $num_experiments ]
                    do
                        conduct_experiment
                        i=$(($i+1))
                    done
                done
            done
        done
    done
}

##################################################

conduct_consensus_experiments() {

    num_experiments=1
    conduct_experiment_set "consensus" "line" "0.00" "10 50 100 200 300 400 500 600 700 800 900 1000 1500 2000 2500 3000 4000 5000"

    ##################################################

    num_experiments=30
    conduct_experiment_set "consensus" "line" "0.25" "10 50 100 200 300 500 800 1000 2000"

    ##################################################

    num_experiments=30
    conduct_experiment_set "consensus" "line" "0.50" "10 50 100 200 300 400 500"

    ##################################################

    num_experiments=30
    conduct_experiment_set "consensus" "line" "0.75" "10 30 50 100 200 250 300 350 400"

    ##################################################
    ##################################################

    num_experiments=30
    conduct_experiment_set "consensus" "scalefree" "0.00" "10 50 100 200 500 1000 2000 5000 10000"

    ##################################################

    num_experiments=30
    conduct_experiment_set "consensus" "scalefree" "0.25" "10 50 100 200 500 1000 2000 3000 5000"

    ##################################################

    num_experiments=30
    conduct_experiment_set "consensus" "scalefree" "0.50" "10 50 100 200 300 500 800 1000 2000"

    ##################################################

    num_experiments=30
    conduct_experiment_set "consensus" "scalefree" "0.75" "10 50 100 200 300 400 500 800 1000"

    ##################################################
    ##################################################

    num_experiments=30
    conduct_experiment_set "consensus" "cluster" "0.00" "10 50 100 200 500 1000 2000 3000 5000 8000"

    ##################################################

    num_experiments=30
    conduct_experiment_set "consensus" "cluster" "0.25" "10 50 100 200 500 1000 2000 3000 4000"

    ##################################################

    num_experiments=30
    conduct_experiment_set "consensus" "cluster" "0.50" "10 50 100 200 300 500 800 1000 1500"

    ##################################################

    num_experiments=30
    conduct_experiment_set "consensus" "cluster" "0.75" "10 50 100 200 300 400 500 600 700 800 1000"
}

##################################################

# conduct_adding_experiments() {
#     # TODO
# }

# ==============================
# =           SCRIPT           =
# ==============================

res1=$(date +%s.%N)

# Get args and set vars
RUN_OR_SUBMIT=${1}
BINARY_DIR="${2}"

GIT_ROOT=$(git rev-parse --show-toplevel)
WD="$BINARY_DIR/experiment"

# Backup and remove existing simulation results
rm -rf "$BINARY_DIR/experiment.old/"
cp -r  "$WD" "$BINARY_DIR/experiment.old/" 2> /dev/null
rm -rf "$WD"

# Go to working dir
mkdir -p "$WD"
cd "$WD"

# Set common experiment params
ARGOS_IN="$GIT_ROOT/src/argos/swarmlist_sim.argos"
FINAL_RES_CSV="$WD/res.csv"
FOOTBOT_CONTROLLER_LIB="$BINARY_DIR/controllers/libFootbotController.so"
LOOP_FUNCTIONS_LIB="$BINARY_DIR/loops/libexp_loop_func.so"
FOOTBOT_STATUS_LOG_DELAY=500
ENTRIES_SHOULD_BECOME_INACTIVE=false
WALLTIME="00:01:00"
STEPS_TO_STALL=2000

# Create final res file.
echo -n "Protocol,Topology,Number of robots,Message drop probability,Consensus time (timesteps),Messages sent (total),Messages received (total),Avg. bandwidth (B/(timestep*footbot)),Avg. received bandwidth (B/(timestep*footbot))" > $FINAL_RES_CSV

##################################################
# Conduct small experiments
num_experiments=1
conduct_experiment_set "consensus" "line" "0.00" "300"

# Conduct the "real" experiments
# conduct_consensus_experiments
# conduct_adding_experiments
##################################################

# Echo time taken

res2=$(date +%s.%N)
dt=$(echo "$res2 - $res1" | bc)
dd=$(echo "$dt/86400" | bc)
dt2=$(echo "$dt-86400*$dd" | bc)
dh=$(echo "$dt2/3600" | bc)
dt3=$(echo "$dt2-3600*$dh" | bc)
dm=$(echo "$dt3/60" | bc)
ds=$(echo "$dt3-60*$dm" | bc)

printf "Total runtime: %d:%02d:%02d:%02.4f\n" $dd $dh $dm $ds
