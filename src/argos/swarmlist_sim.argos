                <kilobot id="kb">
                    <controller config="kb_ctrl"/>
                </kilobot>
            </entity>
        </distribute>-->
    </arena>

    <media>
        <kilobot_communication id="kilocomm" message_drop_prob="MSG_DROP_PROB"/>
        <led id="leds"/>
    </media>

    <physics_engines>
        <dynamics2d id="dynamics2d"/>
    </physics_engines>

